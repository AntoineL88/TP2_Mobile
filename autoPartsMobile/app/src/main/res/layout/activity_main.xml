<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.e1363135.autopartsmobile.MainActivity">

    <Button
        android:id="@+id/btnProduits"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="104dp"
        android:onClick="goToProduits"
        android:text="Produits"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/btnFournisseurs"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/btnProduits"
        android:layout_below="@+id/btnProduits"
        android:layout_marginTop="58dp"
        android:onClick="goToFournisseurs"
        android:text="Fournisseurs"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/btnClients"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/btnFournisseurs"
        android:layout_below="@+id/btnFournisseurs"
        android:layout_marginTop="64dp"
        android:onClick="goToClients"
        android:text="Clients"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="14dp"
        android:layout_marginTop="17dp"
        android:text="TextView" />

</RelativeLayout>
